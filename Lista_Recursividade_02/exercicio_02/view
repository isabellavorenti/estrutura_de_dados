package Lista_Recursiva_2;

import java.util.Scanner;

public class view_recursiva_02 
{

	public static void main(String[] args) 
	{
		int divisor, dividendo, resto;
		controller_recursiva_02 funcao = new controller_recursiva_02();
		
		Scanner ler = new Scanner (System.in);
		
		System.out.println("Digite o valor do divisor: ");
		divisor = ler.nextInt();
		
		System.out.println("Digite o valor do divisor: ");
		dividendo = ler.nextInt();
		
		resto = funcao.Recursiva(divisor, dividendo);
		
		System.out.println("Resto = " + resto);
		
	}

}

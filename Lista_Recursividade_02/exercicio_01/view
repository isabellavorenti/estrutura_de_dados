package Lista_Recursiva_2;

import java.util.Scanner;

public class view_recursiva_01 
{

	public static void main(String[] args)
	{
		int a, b, total;
		
		controller_recursiva_01 funcao = new controller_recursiva_01();
		
		Scanner ler = new Scanner (System.in);
		
		System.out.println("Digite um número inteiro para a: ");
		a = ler.nextInt();
		
		System.out.println("Digite um número inteiro para b: ");
		b = ler.nextInt();
		
		total = funcao.Recursiva(a, b, 1, 0);
		
		System.out.println("Total = " + total);

	}

}

package estrutura_de_dados;

public class Recursividade_1 
{
	
	public Recursividade_1()
	{
		super();
	}
	
	public int soma (int num)
	{
		//Condição de parada: para números negativos retornar 0 e somar com a função.
		if (num < 0)
		{
			return 0;
		}
		
		//Retorno do número somando o próprio número menos 1.
		else
		{
			return num + soma(num - 1);
		}
	}
	
}
